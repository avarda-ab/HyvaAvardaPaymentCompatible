<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.avarda_payments_invoice"
                   as="avarda_payments_invoice"
                   template="Avarda_HyvaAvardaPaymentCompatible::checkout/payment/method/avarda-payment.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \Avarda\HyvaAvardaPaymentCompatible\Model\Magewire\Checkout\Payment\Method\AvardaPayments
                    </argument>
                </arguments>
            </block>
            <block name="checkout.payment.method.avarda_payments_direct_invoice"
                   as="avarda_payments_direct_invoice"
                   template="Avarda_HyvaAvardaPaymentCompatible::checkout/payment/method/avarda-payment.phtml">
