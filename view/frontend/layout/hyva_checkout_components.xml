                    </argument>
                </arguments>
            </block>
            <block name="checkout.payment.method.avarda_payments_loan"
                   as="avarda_payments_loan"
                   template="Avarda_HyvaAvardaPaymentCompatible::checkout/payment/method/avarda-payment.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \Avarda\HyvaAvardaPaymentCompatible\Model\Magewire\Checkout\Payment\Method\AvardaPayments
                    </argument>
                </arguments>
            </block>
            <block name="checkout.payment.method.avarda_payments_partpayment"
                   as="avarda_payments_partpayment"
                   template="Avarda_HyvaAvardaPaymentCompatible::checkout/payment/method/avarda-payment.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \Avarda\HyvaAvardaPaymentCompatible\Model\Magewire\Checkout\Payment\Method\AvardaPayments
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
